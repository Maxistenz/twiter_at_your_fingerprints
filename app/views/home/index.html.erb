<div class="container">

  <div class="page-header">
    <h1>Twitter: <small>Trendings topics</small></h1>
  </div>

  <table class="table table-condensed">
    <tr>
      <th>Name</th>
      <th>URL</th>
      <th></th>
      <th></th>
    </tr>

    <% @list_trending.each do |trend| %>
      <tr>
        <td><%= trend.name %></td>
        <td><%= trend.url %></td>
        <td><%= link_to 'Tweets for trending topics', tweets_path(trend_name: trend.name) %></td>
        <td class="trendLine" data-name="<%= trend.name %>"
            data-url="<%= trend.url %>">Add Favorites</td>
      </tr>
    <% end %>
  </table>

  <h1><small>My favorites Trendings topics</small></h1>

  <table class="table table-condensed" id="favorites_table">
    <tr>
      <th>Name</th>
      <th>URL</th>
      <th></th>
      <th></th>
    </tr>

    <% current_user.trends.each do |trend| %>
      <tr>
        <td><%= trend.name %></td>
        <td><%= trend.url %></td>
      </tr>
    <% end %>

  </table>

</div>