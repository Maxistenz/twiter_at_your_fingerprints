<div class="container">
  <h1>Trendings topics</h1>

  <table class="table table-condensed">

    <tr>
      <th>Name</th>
      <th>URL</th>
      <th></th>
      <th></th>
    </tr>

    <% @list_trending.each do |trend| %>
        <tr>
          <td><%= trend.name %></td>
          <td><%= trend.url %></td>
          <td><%= link_to 'Tweets for trending topics', tweets_path(trend_name: trend.name) %></td>
        </tr>
    <% end %>

  </table>

</div>