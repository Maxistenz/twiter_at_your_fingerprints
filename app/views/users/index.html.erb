<div class="container">
  <div class="page-header">
    <h1><small>Users: </small></h1>
  </div>

    <table class="table table-striped">
      <tr>
        <th>Email</th>
        <th>Rol</th>
        <th></th>
        <th></th>
      </tr>

      <% @users.each do |user| %>
        <tr>
            <td><%= user.email %></td>
            <% if user.admin %>
                <td>Admin</td>
            <% else %>
                <td>User</td>
            <% end %>

          <td><%= link_to 'Remove User', user, method: :delete, data: { confirm: 'Are you sure?' },
                         class: 'btn-link'  %></td>
          <td><%= link_to 'Edit User', edit_user_path(user), class: 'btn-link' %></td>
        </tr>
      <% end %>

    </table>

    <div>
      <%= link_to 'back', home_path %></td>
    </div>
</div>